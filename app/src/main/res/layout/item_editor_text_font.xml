<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    android:background="@drawable/sh_editor_text_font"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/iv_font"
            android:layout_width="75dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/ic_editor_text_font_download"
            android:id="@+id/iv_download"
            android:layout_width="10dp"
            android:visibility="gone"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="right|bottom"
            android:layout_height="10dp"/>
        <com.standisland.god.demo.common.view.CircleProgressView
            android:id="@+id/progress_loading"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="right|bottom"
            android:visibility="gone"
            app:cpv_outline_width="0dp"
            app:cpv_progress_direction="false"
            app:cpv_whole_color="#00000000"
            app:cpv_progress_color="@color/editor_font_download"/>
    </FrameLayout>
